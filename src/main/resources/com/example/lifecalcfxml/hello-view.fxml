<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.lifecalcfxml.HelloController">
    <left>
        <VBox alignment="CENTER" style="-fx-background-color: #272932;" spacing="20">
            <padding>
                <Insets bottom="50"/>
            </padding>
            <Button maxWidth="Infinity" stylesheets="@styleClass.css" text="Home">
                <font>
                    <Font name="Times New Roman" size="25"/>
                </font>
            </Button>
            <Button maxWidth="Infinity" text="Salary" stylesheets="@styleClass.css">
                <font>
                    <Font name="Times New Roman" size="25"/>
                </font>
            </Button>
            <Button maxWidth="Infinity" text="Emergency" stylesheets="@styleClass.css">
                <font>
                    <Font name="Times New Roman" size="25"/>
                </font>
            </Button>
            <Button maxWidth="Infinity" text="Retirement" stylesheets="@styleClass.css">
                <font>
                    <Font name="Times New Roman" size="25"/>
                </font>
            </Button>
        </VBox>
    </left>

    <center>
        <Pane>
            <Rectangle width="310" height="150" arcWidth="20" arcHeight="20" fill="#B6C2D9" layoutY="50" layoutX="10"/>
            <Rectangle width="310" height="500" arcWidth="20" arcHeight="20" fill="#B6C2D9" layoutY="250" layoutX="10"/>

        </Pane>
    </center>
</BorderPane>
