<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lifecalcfxml.HelloController" prefWidth="500" prefHeight="800">
    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #272932;" stylesheets="@styleClass.css">
            <padding>
                <Insets bottom="50" />
            </padding>
            <Button maxWidth="Infinity" styleClass="button" text="Home" onAction="#goHome">
                <font>
                    <Font name="Times New Roman" size="25" />
                </font>
            </Button>
            <Button maxWidth="Infinity" styleClass="button" text="Salary" onAction="#goSalary">
                <font>
                    <Font name="Times New Roman" size="25" />
                </font>
            </Button>
            <Button maxWidth="Infinity" styleClass="button" text="Emergency">
                <font>
                    <Font name="Times New Roman" size="25" />
                </font>
            </Button>
            <Button maxWidth="Infinity" styleClass="button" text="Retirement">
                <font>
                    <Font name="Times New Roman" size="25" />
                </font>
            </Button>
        </VBox>
    </left>
    <center>
        <Pane stylesheets="@styleClass.css">
            <Rectangle arcHeight="20" arcWidth="20" fill="#B6C2D9" height="150" layoutX="10" layoutY="50" width="333"/>
            <Text fill="white" layoutX="140.0" layoutY="80.0" text="Home">
                <font>
                    <Font size="30" />
                </font>
            </Text>
            <Rectangle arcHeight="20" arcWidth="20" fill="#B6C2D9" height="500" layoutX="10" layoutY="250" width="333" />
        </Pane>
    </center>

</BorderPane>
